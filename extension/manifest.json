{
  "name": "Pattern Owl",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "dpbh.html",
    "default_icon": "owl.png"
  },
  "background": {
    "service_worker": "eventPage.js"
  },
  "content_scripts":[
    {
      "matches": ["https://*/*"],
      "css": ["content.css"],
      "js" : ["content.js"]
    },
    {
      "matches": ["https://*/*"],
      "js": ["floating_button.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["owl.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "tabs",
    "notifications",
    "contextMenus",
    "https://*"
  ]
}
